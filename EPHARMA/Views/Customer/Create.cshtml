                                        <input asp-for="UserName" class="form-control" readonly />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="Password" />

                            }*@
                            <div class="col-sm-12">
                                <button id="SubmitButton" type="submit" class="btn btn-primary btn-round">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function ValidatePassword() {
        var ConfirmPassword = document.getElementById("#ConfirmPassword").value;
        if (ConfirmPassword != $("#Password").val()) {
            document.getElementById("#CustomValidation").innerHTML = "Password & Confirm Password doesn't match"
            $("#SubmitButton").attr('disabled', true);
        }
        else {
            document.getElementById("#CustomValidation").innerHTML = "";
            $("#SubmitButton").attr('disabled', false);
        }
    }
    function initialize() {
        var input = document.getElementById('CustomerAddress');
        var autocomplete = new google.maps.places.Autocomplete(input);
        google.maps.event.addListener(autocomplete, 'place_changed', function () {
            debugger;
            var place = autocomplete.getPlace();
            $("#CustomerLatitude").val(place.geometry.location.lat());
            $("#CustomerLongitude").val(place.geometry.location.lng());
        });
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>
