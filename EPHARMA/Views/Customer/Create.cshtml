@model EPHARMA.Models.Customer

@{
    ViewData["Title"] = "Create";
}
<form asp-action="Create" enctype="multipart/form-data" class="form form-vertical">
    <section id="multiple-column-form">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">@(Model.CustomerId ==0 ? "Create Customer" : "Edit Customer")</h2>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="CustomerId" />
                        <input type="hidden" asp-for="CustomerLongitude" />
                        <input type="hidden" asp-for="CustomerLatitude" />
                        <input type="hidden" asp-for="ProfilePhoto" />
                        <input type="hidden" asp-for="Date" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row clearfix">
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="CustomerName" class="control-label"></label>
                                    <input asp-for="CustomerName" required class="form-control" />
                                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="CustomerEmail" class="control-label"></label>
                                    <input asp-for="CustomerEmail" required class="form-control" />
                                    <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="CityId" class="control-label"></label>
                                    <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId">
                                        <option value="">Select City</option>
                                    </select>
                                    <span asp-validation-for="CityId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" required class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Location" class="control-label"></label>
                                    <input asp-for="Location" required class="form-control" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="CustomerAddress" class="control-label"></label>
                                    <input asp-for="CustomerAddress" required id="CustomerAddress" class="form-control" />
                                    <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Age" class="control-label"></label>
                                    <input asp-for="Age" required class="form-control" />
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <label asp-for="Gender" class="control-label">Gender</label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                                <br />
                                <div class="row clearfix">
                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-3 custom-radio" style="margin-left:1.5%;">
                                        <input type="radio" value="Male" asp-for="Gender" id="customRadio1" class="custom-control-input" />
                                        <label class="custom-control-label" style="padding-left: inherit;" for="customRadio1">Male</label>
                                    </div>
                                    <div class="col-sm-3 custom-radio">
                                        <input type="radio" value="Female" asp-for="Gender" id="customRadio2" class="custom-control-input" />
                                        <label class="custom-control-label" style="padding-left: inherit;" for="customRadio2">Female</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label asp-for="CustomerLongitude" class="control-label"></label>
                                    <input asp-for="CustomerLongitude" required class="form-control" />
                                    <span asp-validation-for="CustomerLongitude" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="CustomerLatitude" class="control-label"></label>
                                    <input asp-for="CustomerLatitude" required class="form-control" />
                                    <span asp-validation-for="CustomerLatitude" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Biography" class="control-label"></label>
                                    <input asp-for="Biography" required class="form-control" />
                                    <span asp-validation-for="Biography" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="ProfilePhoto" class="control-label"></label>
                                    <div class="custom-file">
                                        <input name="ProfilePhoto" required type="file" class="form-control custom-file-input">
                                        <label class="custom-file-label">@(Model.ProfilePhoto ?? "Choose File...")</label>
                                    </div>
                                </div>
                            </div>
