@model IEnumerable<EPHARMA.Models.City>

@{
    ViewData["Title"] = "Index";
}
<div class="app-content">
    <div class="content-wrapper">
        <div class="content-header row">
            <h4 class="card-title">City Details</h4>
            <a asp-action="Create">
                <button class="btn btn-primary mb-2 d-flex align-items-center" style="margin-left:700px">
                    <i class="bx bx-plus"></i>&nbsp; Add new City
                </button>
            </a>
        </div>
        <div class="content-body">
            <div class="users-list-table">
                <div class="card">
                    <div class="card-body">
                        @*<div class="card-header">
                                <h4 class="card-title">City Details</h4>
                                <a asp-action="Create">
                                    <button id="addRow" class="btn btn-primary mb-2 d-flex align-items-center">
                                        <i class="bx bx-plus"></i>&nbsp; Add new City
                                    </button>
                                </a>
                            </div>*@
                        <div class="table-responsive">
                            <table class="table zero-configuration">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CityName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CountryId)
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CityName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CountryId)
                                            </td>
                                            <td>
                                                <a asp-action="Create" asp-route-id="@item.CityId"><i class='bx bxs-eyedropper' style="height:25px;width:25px;color:#7367f0"></i></a> |
                                                <a href="#" onclick="DeleteRecord(@item.CityId, '/City/Delete')"><i class="Danger bx bx-trash-alt" style="height:25px;width:25px;color:#ea5455"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>