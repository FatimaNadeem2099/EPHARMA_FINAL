@model IEnumerable<EPHARMA.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}
<div class="app-content">
    <div class="content-wrapper">
        <div class="content-header row">
            <h4 class="card-title">Appointment</h4>
            
        </div>
        <div class="content-body">
            <div class="users-list-table">
                <div class="card">
                    <div class="card-body">
                        @*<div class="card-header">
                                <h4 class="card-title">City Details</h4>
                                <a asp-action="Create">
                                    <button id="addRow" class="btn btn-primary mb-2 d-flex align-items-center">
                                        <i class="bx bx-plus"></i>&nbsp; Add new City
                                    </button>
                                </a>
                            </div>*@
                        <div class="table-responsive">
                            <table class="table zero-configuration">
                                <thead>
                                    <tr>
                                        <th>
                                            Appointment Code
                                        </th>
                                        <th>
                                            Doctor
                                        </th>
                                        <th>
                                            Appointment Status
                                        </th>
                                        <th>
                                            Start Time
                                        </th>
                                        <th>
                                            End Time
                                        </th>
                                                                             
                                        <th>
                                            Appointment Date
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppointmentCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Doctors.DoctorName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppointmentStatus)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndTime)
                                        </td>
                                       
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.AppointmentDate)*@
                                           @item.AppointmentDay, @item.AppointmentDate.ToShortDateString()
                                        </td>
                                       
                                        <td class=" mt-3">
                                            @if (!item.HasPrescription)
                                            {
                                                <div class="fonticon-container">
                                                    <div class="fonticon-wrap" style="margin-bottom: 0px;">
                                                        <i onclick="@("window.location.href='" + @Url.Action("CreatePrescription", "Appointment", new {id = item.AppointmentId}) + "'");" class="bx bx-edit"></i>
                                                    </div>
                                                </div>
                                                }
                                            </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
